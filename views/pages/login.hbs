<div class="container mx-auto mt-4 p-4 shadow-sm rounded-lg
            sm:mt-6 sm:p-6
            md:mt-8 md:p-8 md:w-2/3
            lg:mt-10 lg:p-10 lg:w-1/2 lg:shadow-[2px_2px_10px_10px_rgba(0,0,0,0.16)]">
  <h1 class="text-xl font-bold pb-3 sm:text-2xl sm:pb-4 md:pb-5">Login with Us</h1>

  <form method="post" action="/user/login">
    <!-- Email Input -->
    <div class="mb-4 sm:mb-5 md:mb-6">
      <label for="exampleInputEmail1" class="block text-xs font-medium text-gray-700 sm:text-sm">Email address</label>
      <input
        type="email"
        class="mt-1 block w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500
               sm:px-3 sm:py-2"
        id="exampleInputEmail1"
        name="email"
        aria-describedby="emailHelp"
      />
      <div id="emailHelp" class="mt-1 text-xs text-gray-500 sm:mt-2 sm:text-sm">We'll never share your email with anyone else.</div>
    </div>

    <!-- Password Input -->
    <div class="mb-4 sm:mb-5 md:mb-6">
      <label for="exampleInputPassword1" class="block text-xs font-medium text-gray-700 sm:text-sm">Password</label>
      <input
        type="password"
        class="mt-1 block w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500
               sm:px-3 sm:py-2"
        id="exampleInputPassword1"
        name="password"
      />
    </div>

    <!-- Submit Button -->
    <button
      type="submit"
      class="w-full px-3 py-1.5 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500
             sm:px-4 sm:py-2 sm:text-base"
    >
      Submit
    </button>

    <!-- Registration Link -->
    <div class="mt-2 text-center text-xs text-gray-600 sm:mt-3 sm:text-sm">
      <a href="/user/register" class="text-blue-600 hover:text-blue-800">
        Not a User? Register
      </a>
    </div>

    <!-- Messages -->
    {{#if ErrorMessage}}
      <p class="mt-3 text-xs text-red-600 sm:mt-4 sm:text-sm">Warning: {{ErrorMessage}}</p>
    {{/if}}
    {{#if SuccessMessage}}
      <p class="mt-3 text-xs text-green-600 sm:mt-4 sm:text-sm">{{SuccessMessage}}</p>
    {{/if}}
  </form>
</div>