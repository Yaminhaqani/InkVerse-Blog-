<div class="max-w-4xl mx-auto grid grid-cols-1 gap-4 px-4 sm:px-0">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold text-gray-800">Latest Blogs</h2>
    <a href="/blog/create" class="btn-primary flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      New Post
    </a>
  </div>
  {{#if blogsARR.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {{#each blogsARR}}
        <article class="bg-white group rounded-xl shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1 border border-gray-100">
          <div class="p-4 flex gap-4">
            <img src="{{this.blogImageUrl}}" alt="{{this.blogTitle}}" 
                 class="w-24 h-24 flex-shrink-0 object-cover object-center rounded-lg shadow-sm border border-gray-100">
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-2">
                <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full font-medium">
                  {{this.category}}
                </span>
              </div>
              <h3 class="text-lg font-semibold text-gray-800 truncate">{{this.blogTitle}}</h3>
              
              <p class="text-xs text-gray-500 mt-1">By {{this.author.username}}</p>
              <p class="text-sm text-gray-600 mt-1 line-clamp-2">{{this.blogDescShort}}</p>
            </div>
          </div>
          <div class="px-4 py-3 border-t border-gray-100 flex justify-end">
            <a href="/blogs/{{this._id}}" class="text-gray-500 hover:text-blue-600 flex items-center gap-1 transition-colors">
              Read More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </article>
      {{/each}}
    </div>

  {{else}}
    <div class="text-center py-12 space-y-4">
      <div class="mx-auto text-gray-300">
        <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900">No blog posts yet</h3>
      <p class="text-gray-500 max-w-md mx-auto">Start sharing your ideas with the world. Create your first blog post now.</p>
      <div class="mt-6">
        <a href="/blog/create" class="btn-primary inline-flex items-center gap-1">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create First Post
        </a>
      </div>
    </div>
  {{/if}}
</div>


