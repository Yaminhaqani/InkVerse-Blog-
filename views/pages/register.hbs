<div class="container mx-auto mt-4 p-4 shadow-sm rounded-lg
            sm:mt-6 sm:p-6
            md:mt-8 md:p-8 md:w-3/4
            lg:mt-10 lg:p-10 lg:w-1/2 lg:shadow-[2px_2px_10px_10px_rgba(0,0,0,0.16)]">
  <h1 class="text-xl font-bold pb-3 sm:text-2xl sm:pb-4 md:pb-5">Register with Us</h1>

  <form method="post" action="/user/register">
    <!-- Username Input -->
    <div class="mb-4 sm:mb-5 md:mb-6">
      <label class="block text-xs font-medium text-gray-700 sm:text-sm">Username</label>
      <input
        placeholder="Enter your username"
        type="text"
        class="mt-1 block w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500
               sm:px-3 sm:py-2"
        name="username"
      />
    </div>

    <!-- Email Input -->
    <div class="mb-4 sm:mb-5 md:mb-6">
      <label class="block text-xs font-medium text-gray-700 sm:text-sm">Email address</label>
      <input
        placeholder="Enter your email"
        type="email"
        class="mt-1 block w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500
               sm:px-3 sm:py-2"
        name="email"
      />
    </div>

    <!-- Password Input -->
    <div class="mb-4 sm:mb-5 md:mb-6">
      <label class="block text-xs font-medium text-gray-700 sm:text-sm">Password</label>
      <input
        placeholder="Enter your password"
        type="password"
        class="mt-1 block w-full px-2 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500
               sm:px-3 sm:py-2"
        name="password"
      />
    </div>

      <!-- Checkbox -->
    <div class="mb-6">
      <div class="flex items-center">
        <input
          type="checkbox"
          class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
          id="exampleCheck1"
          required
        />
        <label for="exampleCheck1" class="ml-2 block text-sm text-gray-900">
          I agree with the site's privacy policy and user agreement
        </label>
      </div>
    </div>

    <!-- Submit Button -->
    <button
      type="submit"
      class="w-full px-3 py-1.5 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500
             sm:px-4 sm:py-2 sm:text-base"
    >
      Register
    </button>

    <!-- Login Link -->
    <div class="mt-2 text-center text-xs text-gray-600 sm:mt-3 sm:text-sm">
      <a href="/user/login" class="text-blue-600 hover:text-blue-800">
        Already an User? Login
      </a>
    </div>

    <!-- Messages -->
    {{#if ErrorMessage}}
      <p class="mt-3 text-xs text-red-600 sm:mt-4 sm:text-sm">{{ErrorMessage}}</p>
    {{/if}}
    {{#if SuccessMessage}}
      <p class="mt-3 text-xs text-green-600 sm:mt-4 sm:text-sm">{{SuccessMessage}}</p>
    {{/if}}
  </form>
</div>