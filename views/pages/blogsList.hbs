<div class="max-w-4xl mx-auto p-6">
  <h2 class="text-2xl font-bold mb-4 text-center">My Blogs</h2>
  
  {{#if blogsARR.length}}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {{#each blogsARR}}
        <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300 hover:-translate-y-1 border border-gray-100 p-4">
          <div class="flex flex-col space-y-2">
            <h3 class="text-lg font-semibold text-gray-800 truncate">{{this.blogTitle}}</h3>
            <p class="text-sm text-gray-600 line-clamp-2">{{this.blogDescShort}}</p>
            <img src="{{this.blogImageUrl}}" alt="{{this.blogTitle}}" class="w-full h-40 object-cover rounded-lg border border-gray-100">
            <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full font-medium">{{this.category}}</span>
          </div>
          <div class="mt-3 flex justify-end space-x-2 text-sm">
            <a href="/blogs/{{this._id}}" class="text-blue-500 hover:underline">View</a>
            <a href="/blogs/edit/{{this._id}}" class="text-blue-500 hover:underline">Edit</a>
            <a href="/blogs/delete/{{this._id}}" class="text-red-500 hover:underline">Delete</a>
          </div>
        </article>
      {{/each}}
    </div>
  {{else}}
    <div class="text-center py-12 space-y-4">
      <p class="text-gray-500">No blogs found.</p>
    </div>
  {{/if}}
</div>
